@section anyscripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jQueryUiJs")
    <script>
        $(function () {
            $("#DateOfBirth").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-MM-yy'
                //maxDate: "-24M -10D"
            });
            $("#AdmissioinDate").datepicker({
                changeMonth: true,
                changeYear: true,
                dateFormat: 'dd-MM-yy'
            });
        });
    </script>
}