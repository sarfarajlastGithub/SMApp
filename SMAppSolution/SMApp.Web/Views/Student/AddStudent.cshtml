                                            <div class="col-md-10">
                                                @Html.EnumDropDownListFor(model => model.Stuclass, new { @class = "form-control" })
                                                @Html.ValidationMessageFor(model => model.Stuclass, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

